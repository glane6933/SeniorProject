<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="menuRoot" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: LAVENDER;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wsu.controller.MenuController">

    <BorderPane prefHeight="200.0" prefWidth="200.0">

        <center>
            <VBox alignment="CENTER" prefHeight="391.0" prefWidth="600.0" BorderPane.alignment="CENTER">

                <Button fx:id="startButton" mnemonicParsing="false" onAction="#startGame" style="-fx-background-color: BLACK;" text="Start Game" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <ComboBox fx:id="difficultySelector" prefHeight="40.0" prefWidth="150.0" promptText="Choose Difficulty" style="-fx-text-fill: WHITE;">
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ComboBox>

                <Button fx:id="leaderboardButton" mnemonicParsing="false" onAction="#openLeaderboard" style="-fx-background-color: BLACK;" text="Leaderboard" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#openSettings" style="-fx-background-color: BLACK;" text="Settings" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="howToPlayButton" mnemonicParsing="false" onAction="#openHowToPlay" style="-fx-background-color: BLACK;" text="How To Play" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="quitGameButton" mnemonicParsing="false" onAction="#quitGame" style="-fx-background-color: BLACK;" text="Quit Game" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

            </VBox>
        </center>
      <bottom>
         <AnchorPane prefHeight="60.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                  <Label fx:id="username" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="338.0" layoutY="21.0" prefHeight="23.0" prefWidth="159.0" text="Username">
                      <font>
                          <Font name="Times New Roman Bold" size="20.0" />
                      </font>
                  </Label>
      
                  <Button fx:id="logoutButton" alignment="BOTTOM_RIGHT" layoutX="503.0" layoutY="14.0" mnemonicParsing="false" onAction="#logout" style="-fx-background-color: BLACK;" text="Logout" textFill="WHITE">
                      <font>
                          <Font name="Times New Roman Italic" size="20.0" />
                      </font>
                      <cursor>
                          <Cursor fx:constant="HAND" />
                      </cursor>
                  </Button>
            </children>
         </AnchorPane>
      </bottom>
      <top>
         <AnchorPane prefHeight="176.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                  <Label fx:id="title" alignment="TOP_CENTER" layoutX="198.0" layoutY="88.0" text="Sudoku" textAlignment="CENTER">
                      <font>
                          <Font name="Forte" size="64.0" />
                      </font>
                  </Label>
            </children>
         </AnchorPane>
      </top>

    </BorderPane>

</StackPane>
