<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="menuRoot" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
           fx:controller="edu.wsu.controller.MenuController" xmlns:fx="http://javafx.com/fxml/1">

    <BorderPane prefHeight="200.0" prefWidth="200.0">
        <top>
            <Label fx:id="title" alignment="TOP_CENTER" text="Sudoku" textAlignment="CENTER" BorderPane.alignment="CENTER">
                <font>
                    <Font name="Forte" size="64.0"/>
                </font>
            </Label>
        </top>

        <bottom>
            <Label fx:id="username" alignment="BOTTOM_CENTER" text="Username" BorderPane.alignment="CENTER">
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
        </bottom>

        <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">

                <Button fx:id="startButton" mnemonicParsing="false" onAction="#startGame"
                        style="-fx-background-color: BLACK;" text="Start Game" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <ComboBox fx:id="choseDifficulty" prefWidth="150.0" promptText="Choose Difficulty"
                          style="-fx-background-color: WHITE;">
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ComboBox>

                <Button fx:id="leaderboard" mnemonicParsing="false" onAction="#openLeaderboard"
                        style="-fx-background-color: BLACK;" text="Leaderboard" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="settings" mnemonicParsing="false" onAction="#openSettings"
                        style="-fx-background-color: BLACK;" text="Settings" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="howToPlay" mnemonicParsing="false" onAction="#openHowToPlay"
                        style="-fx-background-color: BLACK;" text="How To Play" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button fx:id="quitGame" mnemonicParsing="false" onAction="#quitGame"
                        style="-fx-background-color: BLACK;" text="Quit Game" textFill="WHITE">
                    <font>
                        <Font name="Times New Roman Italic" size="20.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

            </VBox>
        </center>

    </BorderPane>

</StackPane>
